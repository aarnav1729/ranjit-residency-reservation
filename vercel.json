{
    "version": 2,
    "root": "my-hotel-reservation-system",
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "client/build"
        }
      },
      {
        "src": "server/**/*.js",
        "use": "@now/node"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "server/$1.js" },
      { "src": "/(.*)", "dest": "client/$1" }
    ]
  }  